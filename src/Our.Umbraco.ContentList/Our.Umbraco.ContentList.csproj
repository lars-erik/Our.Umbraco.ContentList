<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>

        <ContentTargetFolders>.</ContentTargetFolders>

        <Product>Our.Umbraco.ContentList</Product>
        <Authors>Lars-Erik Aabech</Authors>
        <PackageId>Our.Umbraco.Community.ContentList</PackageId>
        <Title>Our Umbraco ContentList</Title>
        <Description>...</Description>
        <Product>...</Product>
        <PackageTags>umbraco plugin package grid contentlist</PackageTags>
        <RootNamespace>Our.Umbraco.ContentList</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>2.0.0-alpha-03</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>

    </PropertyGroup>

    <ItemGroup>
        <Content Include="App_Plugins\Our.Umbraco.ContentList\**\*.*" Exclude="App_Plugins\Our.Umbraco.ContentList\Views\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Content Remove="compilerconfig.json" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\datasource\blge-datasource.controller.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\datasource\blge-datasource.html" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\query\contentlist.query.controller.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\query\contentlist.query.html" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\theme\blge-theme.controller.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\theme\blge-theme.html" />
    </ItemGroup>

    <ItemGroup>
      <None Include="compilerconfig.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.3.0-rc" />
        <PackageReference Include="Umbraco.Cms.Web.Common" Version="10.3.0-rc" />
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.3.0-rc" />
    </ItemGroup>


</Project>
