<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>

        <ContentTargetFolders>.</ContentTargetFolders>

        <Product>Our.Umbraco.ContentList</Product>
        <Authors>Lars-Erik Aabech</Authors>
        <PackageId>Our.Umbraco.Community.ContentList</PackageId>
        <Title>Our Umbraco ContentList</Title>
        <Description>...</Description>
        <Product>...</Product>
        <PackageTags>umbraco plugin package grid contentlist</PackageTags>
        <RootNamespace>Our.Umbraco.ContentList</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>2.0.0-alpha-03</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <AppDesignerFolder>PropertyEditors</AppDesignerFolder>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.3.0-rc" />
        <PackageReference Include="Umbraco.Cms.Web.Common" Version="10.3.0-rc" />
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.3.0-rc" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="App_Plugins\Our.Umbraco.ContentList\**\*.*" Exclude="App_Plugins\Our.Umbraco.ContentList\Views\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
      <None Remove="App_Plugins\Our.Umbraco.ContentList\common\datasource.service.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\common\query.properties.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\common\state.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\common\template.service.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\columns\columns.controller.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\datasource\grid.datasource.controller.js" />
      <None Remove="App_Plugins\Our.Umbraco.ContentList\propertyeditors\theme\grid.theme.controller.js" />
    </ItemGroup>


</Project>
